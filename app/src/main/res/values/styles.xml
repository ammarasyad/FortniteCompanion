<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
		<!-- Customize your theme here. -->
		<item name="android:colorPrimaryDark">#FF00675b</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="android:statusBarColor">?android:colorPrimary</item>
		<item name="android:fontFamily">@font/noto_sans</item>
		<item name="android:textAppearanceButton">@style/CustomButton</item>
		<item name="android:actionBarStyle">@style/CustomActionBar</item>
		<item name="android:actionBarTheme">@style/CustomActionBarTheme</item>
	</style>

	<style name="CustomButton" parent="android:TextAppearance.DeviceDefault.Widget.Button">
		<item name="android:fontFamily">@font/noto_sans</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="CustomActionBar" parent="android:Widget.DeviceDefault.Light.ActionBar.Solid">
		<item name="android:titleTextStyle">@style/CustomActionBarTitle</item>
		<item name="android:subtitleTextStyle">@style/CustomActionBarSubtitle</item>
		<!--<item name="android:colorControlNormal">?android:colorAccent</item>-->
	</style>

	<style name="CustomActionBarTheme" parent="android:ThemeOverlay.Material.ActionBar">
		<!--<item name="android:titleTextStyle">@style/CustomActionBarTitle</item>-->
		<!--<item name="android:subtitleTextStyle">@style/CustomActionBarSubtitle</item>-->
		<item name="android:colorControlNormal">?android:colorAccent</item>
	</style>

	<style name="CustomActionBarTitle" parent="android:TextAppearance.DeviceDefault.Widget.ActionBar.Title">
		<item name="android:fontFamily">@font/noto_sans</item>
		<item name="android:textColor">?android:colorAccent</item>
		<item name="android:textFontWeight">500</item>
	</style>

	<style name="CustomActionBarSubtitle" parent="android:TextAppearance.DeviceDefault.Widget.ActionBar.Subtitle">
		<item name="android:fontFamily">@font/noto_sans</item>
	</style>

	<style name="BurbankSmallBold">
		<item name="android:fontFamily">@font/burbank_small</item>
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="BurbankSmallBlack">
		<item name="android:fontFamily">@font/burbank_small</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">?android:textColorPrimary</item>
		<item name="android:textFontWeight">900</item>
	</style>

	<style name="BannerStyle">
		<item name="android:background">#FFFF0000</item>
		<item name="android:fontFamily">@font/burbank_big_condensed</item>
		<item name="android:paddingLeft">4dp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingRight">4dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">#FFFFFFFF</item>
		<item name="android:textFontWeight">900</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>
