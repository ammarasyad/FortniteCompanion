<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="android:Theme.Material">
		<!-- Customize your theme here. -->
		<item name="android:colorPrimary">@color/colorPrimary</item>
		<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:colorAccent">@color/btn_primary_m_hovered_grad_rgba0</item>
		<item name="android:statusBarColor">?android:colorPrimary</item>
		<item name="android:windowBackground">?android:colorPrimaryDark</item>
		<item name="android:fontFamily">@font/noto_sans</item>
		<item name="android:textAppearanceButton">@style/TextAppearance.Widget.Button</item>
		<item name="android:actionBarStyle">@style/Widget.ActionBar.Solid</item>
		<item name="android:actionBarTheme">@style/ThemeOverlay.ActionBar</item>
	</style>

	<style name="TextAppearance.Widget.Button" parent="android:TextAppearance.Material.Widget.Button">
		<item name="android:fontFamily">@font/noto_sans</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Widget.ActionBar.Solid" parent="android:Widget.Material.ActionBar.Solid">
		<item name="android:titleTextStyle">@style/TextAppearance.Widget.ActionBar.Title</item>
		<item name="android:subtitleTextStyle">@style/TextAppearance.Widget.ActionBar.Subtitle
		</item>
		<!--<item name="android:colorControlNormal">?android:colorAccent</item>-->
	</style>

	<style name="ThemeOverlay.ActionBar" parent="android:ThemeOverlay.Material.ActionBar">
		<!--<item name="android:titleTextStyle">@style/TextAppearance.Widget.ActionBar.Title</item>-->
		<!--<item name="android:subtitleTextStyle">@style/TextAppearance.Widget.ActionBar.Subtitle</item>-->
		<item name="android:colorControlNormal">?android:colorAccent</item>
	</style>

	<style name="TextAppearance.Widget.ActionBar.Title" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
		<item name="android:fontFamily">@font/burbank_small</item>
		<item name="android:textColor">?android:colorAccent</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextAppearance.Widget.ActionBar.Subtitle" parent="android:TextAppearance.Material.Widget.ActionBar.Subtitle">
		<item name="android:fontFamily">@font/noto_sans</item>
	</style>

	<style name="TextAppearance" />

	<style name="TextAppearance.BurbankSmall" parent="TextAppearance">
		<item name="android:fontFamily">@font/burbank_small</item>
	</style>

	<style name="TextAppearance.BurbankSmall.Bold" parent="TextAppearance.BurbankSmall">
		<item name="android:fontFamily">@font/burbank_small</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextAppearance.BurbankSmall.Black" parent="TextAppearance.BurbankSmall">
		<item name="android:fontFamily">@font/burbank_small</item>
		<item name="android:textFontWeight">900</item>
	</style>

	<style name="TextAppearance.Switch" parent="android:TextAppearance.Material.Title" />

	<style name="BannerStyle">
		<item name="android:background">#F76070</item>
		<item name="android:fontFamily">@font/burbank_big_condensed</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">#FFFFFFFF</item>
		<item name="android:textFontWeight">900</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="btn_primary_m_yellow">
		<item name="android:background">@drawable/btn_primary_shiny</item>
		<item name="android:fontFamily">@font/burbank_big_condensed</item>
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">12dp</item>
		<item name="android:textColor">#1C2238</item>
		<item name="android:textFontWeight">900</item>
		<item name="android:textSize">28sp</item>
	</style>

	<style name="btn_primary_m_normal">
		<item name="android:background">@drawable/btn_primary</item>
		<item name="android:fontFamily">@font/burbank_big_condensed</item>
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">12dp</item>
		<item name="android:textColor">#1C2238</item>
		<item name="android:textFontWeight">900</item>
		<item name="android:textSize">28sp</item>
	</style>

	<style name="ButtonPartyAssist" parent="@style/TextAppearance.BurbankSmall.Black">
		<item name="android:textColor">@color/btn_party_assist</item>
		<item name="android:background">@drawable/btn_party_assist_bg</item>
		<item name="android:paddingEnd">12dp</item>
		<item name="android:paddingStart">12dp</item>
	</style>
</resources>
