<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="4dp"
	android:foreground="?android:selectableItemBackground"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:paddingStart="16dp"
	android:paddingTop="6dp"
	android:paddingEnd="16dp"
	android:paddingBottom="10dp">

	<com.tb24.fn.view.ForcedMarqueeTextView
		android:id="@+id/item_text1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="0.6"
		android:ellipsize="marquee"
		android:marqueeRepeatLimit="marquee_forever"
		android:singleLine="true"
		android:textAllCaps="true"
		android:textColor="?android:textColorPrimary"
		android:textFontWeight="900"
		android:textSize="32sp"
		app:fontFamily="@font/burbank_big_condensed"
		tools:text="Bundle name" />

	<LinearLayout
		android:id="@+id/quest_completion_container"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="0.4"
		android:gravity="end"
		android:orientation="vertical">

		<ProgressBar
			android:id="@+id/progress_horizontal"
			style="?android:progressBarStyleHorizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView
			android:id="@+id/item_text2"
			style="@style/TextAppearance.BurbankSmall.Bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:textColor="?android:textColorPrimary"
			tools:text="67%" />
	</LinearLayout>

</LinearLayout>