<?xml version="1.0" encoding="utf-8"?>
<com.tb24.fn.util.SlotView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/to_set_background"
	android:layout_width="66dp"
	android:layout_height="110dp"
	android:layout_centerHorizontal="true"
	android:layout_margin="4dp"
	android:background="@drawable/bg_common"
	android:foreground="?android:selectableItemBackground"
	android:gravity="bottom">
	<!--3 : 5 aspect ratio-->
	<!--android:layout_height="96dp"-->

	<TextView
		android:id="@+id/item_slot_dbg_text"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:textSize="8sp"
		tools:text="AthenaItem:blablabla" />

	<com.iambedant.text.OutlineTextView
		android:id="@+id/item_slot_quantity"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentBottom="true"
		android:layout_marginEnd="4dp"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		app:outlineColor="#80000000"
		app:outlineWidth="1.0"
		tools:text="10" />

	<ImageView
		android:id="@+id/item_img"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="fitCenter" />

</com.tb24.fn.util.SlotView>