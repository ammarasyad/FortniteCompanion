<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?android:colorPrimary"
	android:orientation="vertical"
	android:paddingStart="@dimen/activity_horizontal_margin"
	android:paddingTop="12dp"
	android:paddingEnd="@dimen/activity_horizontal_margin">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			style="@style/BurbankSmall.Bold"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Gift Item"
			android:textAllCaps="true"
			android:textColor="?android:textColorPrimary"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/gift_summary_item"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="?android:textColorPrimary"
			android:textStyle="bold"
			tools:text="Recon Expert" />

		<TextView
			style="@style/BurbankSmall.Bold"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:text="Recipients"
			android:textAllCaps="true"
			android:textColor="?android:textColorPrimary"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/gift_summary_recipients"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="?android:textColorPrimary"
			android:textStyle="bold"
			tools:text="Player1, Player2" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical">

		<ImageView
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:contentDescription="V-Bucks"
			android:src="@drawable/t_items_mtx_l" />

		<TextView
			android:id="@+id/gift_vbucks_total"
			style="@style/BurbankSmall.Bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="4dp"
			android:singleLine="true"
			android:textColor="?android:textColorPrimary"
			android:textSize="20sp"
			tools:text="0" />

		<Space
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1" />

		<Button
			android:id="@android:id/button1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Back" />

		<Button
			android:id="@android:id/button2"
			style="@style/Widget.AppCompat.Button.Colored"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
			android:text="Continue"
			android:textStyle="bold" />
	</LinearLayout>
</LinearLayout>