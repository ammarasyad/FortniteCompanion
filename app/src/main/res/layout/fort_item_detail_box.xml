<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/to_set_background"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/bg_uncommon2"
		android:orientation="vertical"
		android:paddingStart="12dp"
		android:paddingTop="8dp"
		android:paddingEnd="12dp"
		android:paddingBottom="8dp">

		<TextView
			android:id="@+id/item_text1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:textAllCaps="true"
			android:textColor="#B3FFFFFF"
			android:textStyle="bold"
			tools:text="Legendary | Emote" />

		<com.tb24.fn.util.ForcedMarqueeTextView
			android:id="@+id/item_text2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="marquee"
			android:fontFamily="@font/burbank_big_condensed"
			android:shadowColor="#80FFFFFF"
			android:shadowRadius="10.0"
			android:singleLine="true"
			android:textAllCaps="true"
			android:textColor="#F0FFFFFF"
			android:textFontWeight="900"
			android:textSize="28sp"
			tools:text="Any legendary emote out there?" />
	</LinearLayout>

	<TextView
		android:id="@+id/item_text3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/item_detail_box_transparent_bg_color"
		android:paddingStart="12dp"
		android:paddingTop="8dp"
		android:paddingEnd="12dp"
		android:paddingBottom="8dp"
		android:textColor="#BDC4DA"
		tools:text="A very long description here.\nReactive: Just a demo.\nPart of the Test set." />
</LinearLayout>