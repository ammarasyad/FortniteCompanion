<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/item_shop_featured_items_title"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="4dp"
	android:background="?android:colorPrimary"
	android:gravity="center_vertical"
	tools:showIn="@layout/activity_item_shop">

	<TextView
		android:id="@+id/item_text1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/burbank_big_condensed"
		android:paddingStart="8dp"
		android:paddingTop="2dp"
		android:paddingEnd="8dp"
		android:paddingBottom="2dp"
		android:textAllCaps="true"
		android:textFontWeight="900"
		android:textSize="22sp"
		tools:text="Featured Items" />

	<com.tb24.fn.view.UpdateEverySecondTextView
		android:id="@+id/item_text2"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_weight="1"
		android:gravity="end"
		android:textAllCaps="false"
		android:textStyle="bold"
		tools:text="0:00:00" />
</LinearLayout>